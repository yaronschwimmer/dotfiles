[include]
    path = ~/.gitconfig.secrets

[diff]
    renames = copies
    mnemonicprefix = true
    tool = meld
	colorMoved = zebra

[difftool "meld"]
    trustExitCode = true
    cmd = open -W -a Meld --args \"$PWD/$LOCAL\" \"$PWD/$REMOTE\"

[merge]
    tool = meld

[mergetool "meld"]
    trustExitCode = true
    cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"
    keepBackup = false

[alias]
    st = status -sb
    ci = commit -a
    cm = commit -am
    ca = commit -a --amend --no-edit
    pf = push --force-with-lease
    br = branch
    co = checkout
    df = diff
    dt = difftool
    mt = mergetool
    dc = diff --cached
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    dfw = diff --word-diff
    dfc = diff --cached
    pull = pull -p
    diff = diff --ignore-all-space
    pbr = !git branch $1 && git push origin $1 && git branch -d $1 && git co 
    mvpbr = !git branch $2 origin/$1 && git push origin $2 && git push origin :$1 && echo    
    rmpbr = !git branch -d $1 && git push origin :$1 && echo
    rmptag = !git push origin :refs/tags/$1 && echo
    signall = !git rebase --exec 'git commit --amend --no-edit -n -S' -i $1
    alias = !git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesFile=~/.gitignore_global
	editor = nvim
[push]
    default = simple
[commit]
    gpgsign = true
[fetch]
	prune = true
[pull]
	rebase = true
[init]
	defaultBranch = main
